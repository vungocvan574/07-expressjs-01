extends ../layouts/common.pug

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger(role='alert')= error

    form(action="/users/create", method="POST")
        .form-group.mb-2
            label.me-2(for="name") Name
            input#name.form-control(name="name", type="text", value=values ? values.name:"")
            
        .form-group.mb-2
            label.me-2(for="phone") Phone
            input#phone.form-control(name="phone", type="text" ,value=values ? values.phone:"")
            
        button.btn.btn-primary.ms-1 Create