extends ../layouts/common.pug

block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger(role='alert')= error

    form(method="POST")
        .form-group.mb-2
            label.me-2(for="email") Email
            input#email.form-control(name="email", type="text", value=values ? values.email:"")
            
        .form-group.mb-2
            label.me-2(for="password") Password
            input#password.form-control(name="password", type="password" ,value=values ? values.password:"")
            
        button.btn.btn-primary.ms-1 Login